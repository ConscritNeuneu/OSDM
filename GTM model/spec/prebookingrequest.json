{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"$id": "http://uic.org/schemas/passenger/farestructure/v1/offerRequest.json",
	"title": "offer request",
	"description": "Request offers",
	"definitions": {
		"prebookingRequest": {
			"type": "object",
			"properties": {
				"offerId": {
					"type": "string"
				},
				"salesChannel": {
					"$ref": "anxilliarydefinitions.json#/definitions/SalesChannelDef"
				},
				"offerContext": {
					"description": "mandatory in case it was provided with the offer",
					"type": "string"
				},
				"price": {
					"$ref": "faredefinitions.json#/definitions/PriceDef"
				},
				"requestedTimeToLive": {
					"description": "requested time limit (in seconds) for the offer. The carrier is not obliged to follow this request",
					"type": "number"
				},
				"passengers": {
					"description": "personal data of the passengers in case they are required",
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"reference": {
								"description": "reference used in the offer",
								"type": "string"
							},
							"passengerDetails": {
								"$ref": "personaldatadefinitions.json#/definitions/PassengerDetailsDef"
							},
							"documentData": {
								"$ref": "personaldatadefinitions.json#/definitions/PassengerPassportDef"
							},
							"cardIdentification": {
								"$ref": "personaldatadefinitions.json#/definitions/CardIdentificationDef"
							},
							"isTicketHolder": {
								"description": "indicates the holder of the ticket in case mutiple passengers share one ticket",
								"type": "boolean"
							}
						},
						"additionalProperties": false
					}
				},
				"reservationContext": {
					"description": "in case place selection provides an additional context",
					"type": "string"
				},
				"reservationDetails": {
					"type": "object",
					"properties": {
						"selectedCoach": {
							"description": "selected coach and places in case of graphical reservation",
							"type": "array",
							"items": {
								"type": "object",
								"properties": {
									"selectedPlaces": {
										"description": "selected places in case of graphical booking",
										"type": "array",
										"items": {
											"type": "string"
										}
									}
								},
								"patternProperties": {
									"selectedCoach": {
										"type": "string"
									}
								},
								"additionalProperties": false
							}
						}
					},
					"additionalProperties": false
				}
			},
			"required": [
				"offerId",
				"salesChannel",
				"price"
			],
			"additionalProperties": false
		}
	}
}