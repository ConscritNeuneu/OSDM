title: Trips Data Model

class Trip <<R,Orchid>> #linen {
  id: string
  origin: Place
  destination: Place
  duration: string
  startTime: dateTime
  endTime: dateTime
  tripStatus
}

class TripLeg <<D, Green>> #linen {
  legId
}

class TimedLeg <<D, Green>> #linen {
  legBoard: LegStop
  legIntermediates: LegStop[]
  legAlight: LegStop
  service
}

class LegStop <<D, Green>> #linen {
  plannedQuay
  estimatedQuay
  serviceArrival
  serviceDeparture
  status
}

class DatedJourney <<D, Green>> #linen {
  mode 
  vehicleNumber
  operatorRef
}

class TransferLeg <<D, Green>> #linen {
  transferMode
  legStart: Place
  legEnd: Place
  timeWindowStart
  timeWindowEnd
  duration
}

class ContinuousLeg <<D, Green>> #linen {
  legStart: Place
  legEnd: Place
  service
  timeWindowStart
  timeWindowEnd
  duration
}

class ContinuousService <<D, Green>> #linen {
  originText
  destinationText
}

Trip -- "1:m" TripLeg
TripLeg -- "timedLeg" TimedLeg
TripLeg -- "transferLeg" TransferLeg
TripLeg -- "continousLeg" ContinuousLeg
TimedLeg -- "service" DatedJourney
TimedLeg -- "legBoard" LegStop
TimedLeg -- "legAlight" LegStop

ContinuousLeg -- "continousService" ContinuousService
