{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "offer reply",
	"description": "provides offers for combining fares",
	"definitions": {
		"checkNearbyPlacesReply": {
			"type": "object",
			"properties": {
				"ErrorDescription": {
					"type": "object",
					"properties": {
						"Type": {
							"description": "FUNCTIONAL,TECHNICAL,CONTENT",
							"type": "string"
						},
						"Code": {
							"type": "string"
						},
						"Description": {
							"description": "error description used to analyze errors",
							"type": "string"
						}
					},
					"required": [
						"Type",
						"Code"
					],
					"additionalProperties": false
				},
				"reservationContext": {
					"type": "string"
				},
				"availablePreferences": {
					"description": "list of available preferences. The list is a subset of the requested preferences.",
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"location": {
					"description": "NEXT,CLOSE,SAME_COACH",
					"type": "string"
				}
			},
			"additionalProperties": false
		}
	}
}