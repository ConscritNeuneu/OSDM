{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"$id": "http://uic.org/schemas/passenger/farestructure/v1/genericerror.json",
	"title": "generic error",
	"description": "generic error definition providing information for error analysis",
	"definitions": {
		"ErrorDef": {
			"type": "object",
			"properties": {
				"scope": {
					"description": "FUNCTIONAL,TECHNICAL,CONTENT",
					"type": "string"
				},
				"code": {
					"type": "string"
				},
				"description": {
					"description": "description of the error in english to analyse the error",
					"type": "string"
				}
			},
			"required": [
				"type",
				"code"
			],
			"additionalProperties": false
		}
	}
}